@model ClientAPI.Models.EmployeeDepartment

@{
    ViewData["Title"] = "usuń dział";
}

<h1>Usuń dział</h1>

<h3>Czy na pewno chcesz usunąć ten dział?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Dział
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DepartmentName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Powrót do listy działów</a>
    </form>
</div>
