@model ClientAPI.Models.EmployeeDepartment

@{
    ViewData["Title"] = "Edytuj dział";
}

<h1>Edytuj dział</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="DepartmentName" class="control-label">Nazwa działu</label>
                <input asp-for="DepartmentName" class="form-control" value="@ViewBag.EmployeeDepartment.DepartmentName" />
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz zmiany" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy działów</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
