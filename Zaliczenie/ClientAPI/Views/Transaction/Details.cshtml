@model ClientAPI.Models.Transaction

@{
    ViewData["Title"] = "Szczegóły";
}

<h1>Szczegóły tranzakcji</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Data tranzakcji
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TimeStamp)
        </dd>
        <dt class = "col-sm-2">
            Przedmiot
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdItemNavigation.ItemName)
        </dd>
        <dt class = "col-sm-2">
            Cena przedmiotu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdItemNavigation.ItemPrice)
        </dd>
        <dt class = "col-sm-2">
            Ilość
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Amount)
        </dd>
        <dt class = "col-sm-2">
            Cena całkowita
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TotalPrice)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edytuj</a> |
    <a asp-action="Index">Powrót do listy</a>
</div>
