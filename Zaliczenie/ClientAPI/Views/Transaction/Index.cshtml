@model IEnumerable<ClientAPI.Models.Transaction>

@{
    ViewData["Title"] = "Lista tranzakcji";
}

<h1>Lista tranzakcji</h1>

<p>
    <a asp-action="Create">Dodaj nową tranzakcję</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Data
            </th>
            <th>
                Przedmiot
            </th>
            <th>
                Cena
            </th>
            <th>
                Ilość
            </th>
            <th>
                Cena całkowita
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TimeStamp)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdItemNavigation.ItemName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> 
                <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> 
                <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
