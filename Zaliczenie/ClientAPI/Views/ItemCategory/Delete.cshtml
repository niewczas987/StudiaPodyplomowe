@model ClientAPI.Models.ItemCategory

@{
    ViewData["Title"] = "Usuń";
}

<h1>Usuń kategorię</h1>

<h3>Czy jesteś pewien, ze chcesz usunąć poniższą kategorię?</h3>
<div>
    <h4>ItemCategory</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nazwa kategorii
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CategoryName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Powrót do listy kategorii</a>
    </form>
</div>
