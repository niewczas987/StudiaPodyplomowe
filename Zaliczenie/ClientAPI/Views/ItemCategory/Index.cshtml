@model IEnumerable<ClientAPI.Models.ItemCategory>

@{
    ViewData["Title"] = "Lista kategorii przedmitów";
}

    <h1>Lista kategorii przedmitów</h1>

<p>
    <a asp-action="Create">Dodaj nową kategorię</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Kategoria
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edytuj</a> 
                <a asp-action="Details" asp-route-id="@item.Id">Szczegóły</a> 
                <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>
