@model ClientAPI.Models.ItemType

@{
    ViewData["Title"] = "Usuń";
}

<h1>Usuń typ przedmiotu</h1>

<h3>Czy jesteś pewien, że chcesz usunąć poniższy typ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Typ przedmiotu
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TypeName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Powrót do listy typów</a>
    </form>
</div>
