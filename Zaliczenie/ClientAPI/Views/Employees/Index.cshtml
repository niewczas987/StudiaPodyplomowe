@model IEnumerable<ClientAPI.Models.Employees>

@{
    ViewData["Title"] = "Informacje na temat pracowników";
}

    <h1>Informacje na temat pracowników</h1>

<p>
    <a asp-action="Create" asp-controller="Employees" asp-action="Create">Dodaj nowego pracownika</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Imię
            </th>
            <th>
                Nazwisko
            </th>
            <th>
                Wiek
            </th>
            <th>
                Stanowisko
            </th>
            <th>
                Dział
            </th>
            <th>
                Wynagrodzenie
            </th>
            <th>
                Miasto
            </th>
            <th>
                Adres
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PositionNavigation.PositionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentNavigation.DepartmentName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Salary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @if (ViewContext.HttpContext.User.Identity.IsAuthenticated)
                {
                    <a asp-action="Edit" asp-route-id="@item.Id" asp-controller="Employees" asp-action="Details">Edytuj</a> 
                    <a asp-action="Details" asp-route-id="@item.Id" asp-controller="Employees" asp-action="Details">Szczegóły</a> 
                    <a asp-action="Delete" asp-route-id="@item.Id">Usuń</a>
                }
                
            </td>
        </tr>
}
    </tbody>
</table>
