@model ClientAPI.Models.EmployeeGrade

@{
    ViewData["Title"] = "Edytuj ocenę";
}

<h1>Edytuj ocenę</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Idemployee" class="control-label">Imię pracownika</label>
                <select asp-for="Idemployee" class="form-control" asp-items="@(new SelectList(@ViewBag.Employees,"Id","Name", @ViewBag.EmployeeGrade.Idemployee))"><</select>
                <span asp-validation-for="Idemployee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Value" class="control-label">Ocena</label>
                <select asp-for="Value" class="form-control">
                    <option value="1">★</option>
                    <option value="2">★★</option>
                    <option value="3">★★★</option>
                    <option value="4">★★★★</option>
                    <option value="5">★★★★★</option>
                    <
                </select>
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TimeStamp" class="control-label">Data</label>
                <input asp-for="TimeStamp" class="form-control" value="@ViewBag.EmployeeGrade.TimeStamp"/>
                <span asp-validation-for="TimeStamp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Powrót do listy ocen</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
