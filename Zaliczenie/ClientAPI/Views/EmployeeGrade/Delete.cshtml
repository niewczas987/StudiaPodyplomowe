@model ClientAPI.Models.EmployeeGrade

@{
    ViewData["Title"] = "Usuń ocenę";
}

<h1>Usuń ocenę pracownika</h1>

<h3>Czy jesteś pewien, że chcesz usunąć tą ocenę?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Imię pracownika
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdemployeeNavigation.Name)
        </dd>
        <dt class = "col-sm-2">
            Ocena
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Value)
        </dd>
        <dt class = "col-sm-2">
            Czas dodania
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TimeStamp)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Usuń" class="btn btn-danger" /> |
        <a asp-action="Index">Powrót do listy ocen</a>
    </form>
</div>
